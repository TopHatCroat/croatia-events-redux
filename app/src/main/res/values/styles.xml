<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="searchViewStyle">@style/searchViewStyle</item>-->
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>


    <style name="AppTheme.RegularFont18">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <style name="AppTheme.RegularFont18.Inverse" parent="AppTheme.RegularFont18">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.RegularFont18.Title" parent="AppTheme.RegularFont18">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.RegularFont18.DialogTitle" parent="AppTheme.RegularFont18">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.RegularFont14">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppTheme.RegularFont14.Strong" parent="AppTheme.RegularFont14">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.RegularFont16">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.RegularFont14.Smaller" parent="AppTheme.RegularFont14">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.MediumFont14">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.MediumFont14.Inverse" parent="AppTheme.MediumFont14">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppTheme.MediumFont14.Blue" parent="AppTheme.MediumFont14">
        <item name="android:textColor">@color/accented_text</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#1a000000</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="AppTheme.Icon">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
    </style>

    <style name="AppTheme.Symbol">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.Icon.Inverse" parent="AppTheme.Icon">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="AppTheme.Icon.Navigation" parent="AppTheme.Icon">
        <item name="android:tint">@color/secondary_text</item>
    </style>

    <style name="AppTheme.Icon.Normal" parent="AppTheme.Icon">
        <item name="android:alpha">.30</item>
    </style>

    <style name="AppTheme.Icon.Stronger" parent="AppTheme.Icon">
        <item name="android:alpha">.50</item>
    </style>

    <style name="AppTheme.Icon.Weaker" parent="AppTheme.Icon">
        <item name="android:alpha">.15</item>
    </style>

    <style name="AppTheme.MainLogo">
        <item name="android:layout_width">184dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="AppTheme.Button.Light" parent="AppTheme.Button">
        <item name="android:background">@drawable/white_button</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:background">@color/color_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>
